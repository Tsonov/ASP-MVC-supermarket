@model Supermarket.Main.Areas.Management.Models.CategoryViewModel

@{
    ViewBag.Title = "Delete " + Model.Name;
}

<h2>Delete @Model.Name</h2>

<h3>Are you sure you want to delete this?</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Delete category</legend>
        <table>
            <tbody>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Name)
                    </td>
                </tr>
                <tr>
                </tr>
            </tbody>
        </table>
    </fieldset>
    <p>

        <input type="submit" value="Delete" />
        |
        <input type="button" value="Back to list" id="backToList" />
    </p>
}

@section Scripts {
    <script>
        $(function () {
            $("#backToList").on("click", function () {
                window.location.replace("@Url.Action("Index")");
            })
        });

    </script>
}
